{
    "hooks": {
        "after:bump": "npm run build"
    },
    "git": {
        "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
        "requireBranch": "master",
        "commit": true,
        "commitMessage": "v${version}",
        "tag": true,
        "tagName": "v${version}"
    },
    "npm": {
        "publish": false
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "infile": "CHANGELOG.md",
            "preset": {
                "name": "conventionalcommits",
                "types": [
                    {
                        "type": "feat",
                        "section": "Features"
                    },
                    {
                        "type": "fix",
                        "section": "Bug Fixes"
                    }
                ]
            },
            "gitRawCommitsOpts": {
                "merges": true
            }
        }
    }
}