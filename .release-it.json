{
    "git": {
        "requireBranch": "master",
        "commit": true,
        "commitMessage": "v${version}",
        "tag": true,
        "tagName": "v${version}"
    },
    "npm": {
        "publish": false
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md",
            "gitRawCommitsOpts": {
                "merges": true
            }
        }
    }
}